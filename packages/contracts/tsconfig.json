{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./abi",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["abi/**/*", "**/*.json"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
